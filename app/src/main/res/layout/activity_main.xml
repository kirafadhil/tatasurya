<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_saturn"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/saturn" />

            <ImageView
                android:id="@+id/imageView_mars"
                android:layout_width="139dp"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/mars"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_uranous"
                android:layout_width="158dp"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/uranous"/>

            <ImageView
                android:id="@+id/imageView_venus"
                android:layout_width="146dp"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/venus" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_neptunus"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/neptunus" />


            <ImageView
                android:id="@+id/imageView_mercury"
                android:layout_width="158dp"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/mercury" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_earth"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/earth" />


            <ImageView
                android:id="@+id/imageView_moon"
                android:layout_width="158dp"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#000000"
                android:padding="10dp"
                android:src="@drawable/moon" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
